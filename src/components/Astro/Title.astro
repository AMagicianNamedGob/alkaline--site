---
/* Component for rendering page titles with optional logo.
 *
 * Props:
 * - title: string - Main title text
 * - showTitleBackground: boolean - Enable background styling
 * - logoImg?: ImageMetadata - Optional logo image
 * - class?: string - Additional CSS classes
 *
 * Example usage:
 * <Title
 *   title="Welcome to Our Site"
 *   showTitleBackground={true}
 *   logoImg={import("@assets/logo.png")}
 *   class="my-title"
 * />
 *
 * Notes:
 * - Two visual style variants
 * - Optimized logo display
 * - Responsive layout
 * - Theme-based borders
 * - Flexible width
 */

import type { ImageMetadata } from "astro";

import { Image } from "astro:assets";

interface Props {
    // Main title text //
    title: string;
    // Controls the title's visual style and background //
    showTitleBackground: boolean;
    // Optional path to logo image //
    logoImg?: ImageMetadata;
    // Optional CSS classes //
    class?: string | undefined;
}

const { title, showTitleBackground, class: className, logoImg } = Astro.props;

const options = {
    "rounded-theme": true,
};
---

<div
    class:list={[
        "flex border-b-[9px] border-t-[6px]",
        {
            "border-theme-primary": !showTitleBackground,
            "border-theme-secondary": showTitleBackground,
        },
        options,
        "rounded-t-none",
    ]}
>
    {
        logoImg && (
            <span
                class:list={["flex logo-wrapper items-center px-1 bg-theme-accent-alt"]}
            >
                <span class="flex items-center border-2 border-theme-secondary rounded-full">
                    <Image
                        src={logoImg}
                        alt="Logo"
                        width={72}
                        height={72}
                        class="rounded-full"
                    />
                </span>
            </span>
        )
    }
    <h1
        class:list={[
            "py-2 w-full p-10 m-1",
            {
                "is-title-alt leading-none py-5 text-center": showTitleBackground,
                "is-title p-0 pl-2": !showTitleBackground,
            },
            className,
        ]}
    >
        {title}
    </h1>
</div>
