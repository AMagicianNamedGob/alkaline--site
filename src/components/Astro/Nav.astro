---
/**
 * @description Component for rendering the main navigation with theme toggle.
 * @param {NavProps} props - Navigation configuration
 * @example
 * ```astro
 * <Nav
 *   links={[
 *     { href: "/", text: "Home" },
 *     { href: "/blog", text: "Blog" },
 *     { href: "/about", text: "About" }
 *   ]}
 *   class="my-custom-nav"
 * />
 * ```
 * @note
 * - Automatically includes theme toggle button
 * - Responsive design with flex layout
 * - Supports custom styling via class prop
 * - Accessible with proper ARIA labels
 */



import ToggleTheme from "@components/Astro/ToggleTheme.astro";
import type { NavEntry } from "../../Types/types";

export interface Props {
	/** Array of navigation links */
	links: NavEntry[];
	/** Optional theme names for the toggle */
	themeNames?: string[];
	/** Optional CSS classes */
	class?: string | undefined;
}

const { links = [], class: className } = Astro.props;
---

<nav
	aria-label="Main navigation"
	class:list={["flex flex-nowrap z-10 mt-2 mb-8 px-4 2xl:px-0", className]}
>
	<ul class="inline-flex flex-wrap mb-2 sm:mb-0 sm:mr-6">
		{
			links.map((obj) => (
				<li class="pr-2 first:pl-0">
					<a href={obj.href} class="px-2 first:pl-0">
							{obj.text}
					</a>
				</li>
			))
		}
	</ul>
	<ToggleTheme class="ml-auto" />
</nav>
